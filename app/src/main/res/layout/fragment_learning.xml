<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/learning_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        style="@android:style/Widget.ProgressBar.Horizontal"/>
    <!--<android.support.design.widget.AppBarLayout-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_width="match_parent"-->
    <!--android:theme="@style/AppTheme.AppBarOverlay">-->

    <!--<android.support.v7.widget.Toolbar-->
    <!--android:id="@+id/toolbar"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="?attr/actionBarSize"-->
    <!--android:background="?attr/colorPrimary"-->
    <!--app:popupTheme="@style/AppTheme.PopupOverlay"/>-->
    <!---->
    <!--</android.support.design.widget.AppBarLayout>-->
    <TextView
        android:id="@+id/word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="44sp"/>

    <TextView
        android:id="@+id/pronunciation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/word"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/skill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pronunciation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="44sp"/>

    <TextView
        android:id="@+id/chance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/warning"
        android:layout_centerHorizontal="true"
        android:textSize="44sp"/>

    <TextView
        android:id="@+id/warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_a"
        android:gravity="center"
        android:text="@string/tip_warning"/>

    <Button
        android:id="@+id/button_d"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="160dp"
        android:layout_height="72dp"
        android:layout_above="@+id/button_dont_know"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:background="@drawable/button"
        android:ellipsize="marquee"
        android:maxLines="2"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/button_c"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="160dp"
        android:layout_height="72dp"
        android:layout_above="@+id/button_dont_know"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:background="@drawable/button"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/button_a"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="160dp"
        android:layout_height="72dp"
        android:layout_above="@id/button_c"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/button"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/button_b"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="160dp"
        android:layout_height="72dp"
        android:layout_above="@id/button_d"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/button"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="18sp"/>
    
    <Button
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:text="NevÃ­m"
        android:textAllCaps="false"
        android:background="@drawable/button"
        style="@style/Widget.AppCompat.Button"
        android:id="@+id/button_dont_know"
        android:layout_margin="15dp"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_alignParentBottom="true"/>

